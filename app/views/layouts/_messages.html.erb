<% flash.each do |name, msg| %>
  <div class="alert alert-<%= name %> alert-dismissible fade show" role="alert">
    <ul>
      <li><%= msg %>
    </ul>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
