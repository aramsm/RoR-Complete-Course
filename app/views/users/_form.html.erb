<%= form_for @user do |f| %>
  <div class="form-group row">
    <%= f.label :username, class: 'col-sm-2 col-form-label' %>
    <%= f.text_field(
      :username,
      class: 'col-sm-8 form-control',
      placeholder: 'Enter username',
      autofocus: true
    ) %>
  </div>
  <div class="form-group row">
    <%= f.label :email, class: 'col-sm-2 col-form-label' %>
    <%= f.email_field(
      :email,
      class: 'col-sm-8 form-control',
      placeholder: 'Enter email'
    ) %>
  </div>
  <div class="form-group row">
    <%= f.label :password, class: 'col-sm-2 col-form-label' %>
    <%= f.password_field(
      :password,
      class: 'col-sm-8 form-control',
      placeholder: 'Enter password'
    ) %>
  </div>
  <div class="form-group row">
    <div class="col-sm-10" id="form-buttons-col">
      <div class="btn-toolbar float-right" role="toolbar">
        <div class="btn-group" role="group" style="margin-right: 5px;">
          <%= f.submit buttom_label, class: 'btn btn-primary' %>
        </div>
        <div class="btn-group mr-2" role="group">
          <%= link_to 'Cancel', root_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
