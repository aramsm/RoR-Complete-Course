<h1 class="text-center page-header"><%= @article.title %></h1>
<hr>
<div class="row">
  <div class="col-md-8">
    <%= simple_format(@article.description) %>
  </div>
  <div class="col-md-4 bg-light rounded center">
    <h2>Author</h2>
    <ul class="listing">
      <div class="row">
        <div class="col-md-12">
          <li>
            <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
          </li>
          <li class="article-title">
            <%= link_to @article.user.username, user_path(@article.user) %>
          </li>
          <li>
            <small>
              <%= pluralize(@article.user.articles.count, 'article') if @article.user.articles.exists? %>
            </small>
          </li>
        </div>
      </div>
    </ul>
  </div>
</div>
<hr>
<div class="article-actions btn-group row col-md-8">
  <%= link_to(
    'Back',
    articles_path,
    class: 'btn btn-sm btn-secondary',
    title: 'Back'
  ) %>
  <%= link_to(
    'Edit',
    edit_article_path(@article),
    class: 'btn btn-sm btn-secondary',
    title: 'Edit'
  ) %>
  <%= link_to(
    'Delete',
    article_path(@article),
    method: :delete,
    data: { confirm: 'Are you sure you want to delete the article?' },
    class: 'btn btn-sm btn-danger',
    title: 'Delete'
  ) %>
</div>
